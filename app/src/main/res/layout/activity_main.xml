<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFE0C9">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student's Detail Tracker"
        android:textSize="30dp"
        android:textColor="#AC6FCC"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/Btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="AddList"
        android:text="Add info"
        android:padding="20dp"
        android:layout_above="@+id/Btn2"
        android:layout_centerInParent="true"
        android:textSize="30dp"
        android:background="#99FAAA"/>

    <Button
        android:id="@+id/Btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="ViewList"
        android:text="View Info"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:background="#A9A9FA"/>

    <Button
        android:id="@+id/Btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Btn2"
        android:layout_centerInParent="true"
        android:onClick="UpdateUser"
        android:text="Update Info"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:textSize="30dp"
        android:background="#FFF000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A.N.D.C. 1991-2017"
        android:layout_below="@+id/Btn3"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>

</RelativeLayout>